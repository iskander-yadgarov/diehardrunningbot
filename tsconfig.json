{
  "compilerOptions": {
    "lib": ["es2016"],
    "target": "es6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "outDir": "out",
    "typeRoots": ["./typings"]
  },
  "include": ["src/**/*"]
}